# Environment variables for ExpertConnect
# Database configuration
DB_NAME=expertconnect
DB_USER=expertconnect_user
DB_PASSWORD=secure_password_here
DB_HOST=db
DB_PORT=5432

# Django settings
DEBUG=False
SECRET_KEY=change_this_to_a_secure_random_string
ALLOWED_HOSTS=localhost,127.0.0.1,expertconnect.example.com

# Email configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=email_password_here
EMAIL_USE_TLS=True

# AWS S3 for file storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=expertconnect-files

# Frontend settings
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WEBSOCKET_URL=ws://localhost:8000/ws
